<div class="form-signup m-5">
  <h2 class="section-title" >Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-floating">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
      <%= f.label :email %>
    </div>

    <div class="form-floating">
      <%= f.text_field :name, class:"form-control" %>
      <%= f.label :name %>
    </div>

    <div class="form-floating">
      <%= f.text_field :username, class:"form-control" %>
      <%= f.label :username %>
    </div>

    <div class="form-floating">
      <%= f.select :occupation,  options_for_select(occupation_options), { prompt: 'Choose an occupation' }, class:"form-select" %>
      <%= f.label :occupation %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      <%= f.label :password do %> Password
      <% if @minimum_password_length %>
        <span id="passwordHelpBlock" class="form-text">(<%= @minimum_password_length %> characters minimum)</span>
      <% end %>
      <% end %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      <%= f.label :password_confirmation %>
    </div>

    
    <%= f.submit "Sign up", class:"w-100 btn btn-lg btn-primary" %>
    
  <% end %>
  <br>
  <%= render "devise/shared/links" %>
</div>