<div class="row">
  <h1 class="section-title" >All Genera</h1>
  <%= paginate @genera %>
    <div class="row row-cols-2 row-cols-xl-4 g-2">
      <% @genera.each do |genus| %>
        <div class="col">
          <%= link_to genus_path(genus), class:"text-decoration-none" do %>
            <div class="card plant-card">
              <div class="card-body">
                <h6 class="card-subtitle mb-2 text-muted">Genus</h6>
                <p class="card-text"><i><%= genus.name %></i></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
</div>