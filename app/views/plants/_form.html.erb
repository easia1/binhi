<%= form_with(model: plant, local: true) do |form| %>
  <% if plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
        <% plant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :genus_name %>
    <%= form.text_field :genus_name, list: 'genera_autocomplete' %>
    <datalist id="genera_autocomplete" maxlength="4">
      <% Genus.all.each do |genus| %>
        <option value="<%= genus.name %>">
      <% end %>
    </datalist>
  </div>

  <div class="field">
    <%= form.label :symbol, 'Genus symbol' %> <br>
    <%= form.radio_button :symbol, '' %> None <br>
    <%= form.radio_button :symbol, 'hybrid' %> Hybrid <br>
    <%= form.radio_button :symbol, 'graft' %> Graft <br>
  </div>

  <div class="field">
    <%= form.label :family_name %>
    <%= form.text_field :family_name %>
  </div>

  <div class="field">
    <%= form.label :specific_epithet %>
    <%= form.text_field :specific_epithet %>
  </div>

  <div class="field">
    <%= form.label :hybrid, 'Specific epithet symbol' %> <br>
    <%= form.radio_button :hybrid, '' %> None <br>
    <%= form.radio_button :hybrid, 'manmade' %> Man-made <br>
    <%= form.radio_button :hybrid, 'natural' %> Natural <br>
  </div>

  <div class="field">
    <%= form.label :grex %>
    <%= form.text_field :grex %>
  </div>

  <div class="field">
    <%= form.label :infraspecies_unit %>
    <%= form.text_field :infraspecies_unit %>
  </div>

  <div class="field">
    <%= form.label :infraspecies_name %>
    <%= form.text_field :infraspecies_name %>
  </div>

  <div class="field">
    <%= form.label :cultivar_group %>
    <%= form.text_field :cultivar_group %>
  </div>

  <div class="field">
    <%= form.label :cultivar %>
    <%= form.text_field :cultivar %>
  </div>

  <div class="field">
    <%= form.label :hybrid %>
    <%= form.text_field :hybrid %>
  </div>

  

  <div class="field">
    <%= form.label :water_reqts %>
    <%= form.text_field :water_reqts %>
  </div>

  <div class="field">
    <%= form.label :landscape_uses %>
    <%= form.text_area :landscape_uses %>
  </div>


  <strong>Synonyms</strong>
  
  <div class='fields2'>
    <%= form.fields_for :synonyms do |builder| %>
      <%= render 'synonym', f: builder %>
    <% end %>
  </div> 
  <%= link_to_add_synonym('Add Synonym', form, :synonyms, class: 'btn btn-primary') %>

  <div>
    <strong>Common Names</strong>
  </div>

  <div class='fields'>
    <%= form.fields_for :common_names do |builder| %>
      <%= render 'common_name', f: builder %>
    <% end %>
  </div> 
  <%= link_to_add_row('Add Common Name', form, :common_names, class: 'btn btn-primary') %>
  
  <div class='fields'>
    <%= form.label :light_reqt %>
    <%= form.select :light_reqt, [['Part Sun', 'Part Sun'],['Full Sun', 'Full Sun'], ['Part Shade', 'Part Shade'], ['Full Shade', 'Full Shade']], {}, :multiple => 'multiple', :class => 'form-control' %>
  </div>


  <div class='fields'>
    <%= form.label :foliage_color %>
    <%= form.select :foliage_color, [], {}, :multiple => 'multiple', :class => 'form-control' %>
  </div>
  

  <div class='fields'>
    <%= form.label :flower_color %>
    <%= form.select :flower_color, [], {}, :multiple => 'multiple', :class => 'form-control' %>
  </div>
  

  <%#= form.select :light_reqt, [['Part Sun', 'Part Sun'],['Full Sun', 'Full Sun'], ['Part Shade', 'Part Shade'], ['Full Shade', 'Full Shade']], {}, :required => "true", :multiple => 'multiple', :class => 'form-control' %>
  <%#= form.select :light_reqt, [['Single', 'Single'],['Married', 'Married'], ['Widowed', 'Widowed'], ['Separated', 'Single']], {}, :required => "true", :multiple => 'multiple', :class => 'form-control' %>
  
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>



