<p id="notice"><%= notice %></p>

<h1>Plants</h1>

<table>
  <thead>
    <tr>
      <th>Sci name</th>
      <th>Synonyms</th>
      <th>Common names</th>
      <th>Family</th>
      <th>Genus</th>
      <th>Light reqts</th>
      <th>Water reqts</th>
      <th>Foliage color</th>
      <th>Flower color</th>
      <th>Landscape uses</th>
      <th>Native distribution</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plants.each do |plant| %>
      <tr>
        <td><%= plant.sci_name %></td>
        <td><%= plant.synonyms %></td>
        <td><%= plant.common_names %></td>
        <td><%= plant.family %></td>
        <td><%= plant.genus %></td>
        <td><%= plant.light_reqts %></td>
        <td><%= plant.water_reqts %></td>
        <td><%= plant.foliage_color %></td>
        <td><%= plant.flower_color %></td>
        <td><%= plant.landscape_uses %></td>
        <td><%= plant.native_distribution %></td>
        <td><%= plant.user_id %></td>
        <td><%= link_to 'Show', plant %></td>
        <td><%= link_to 'Edit', edit_plant_path(plant) %></td>
        <td><%= link_to 'Destroy', plant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plant', new_plant_path %>
<%= link_to 'Log Out', destroy_user_session_path, method: :delete %>