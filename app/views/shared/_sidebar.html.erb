                <%= link_to plants_path, class: "navigation-link rounded mt-2 #{active_class(plants_path)}" do %>All Plants<% end %>
            </li>
            <% if current_user %>
                <li class="nav-item">
                    <%= link_to new_plant_path, class: "navigation-link rounded mt-2 #{active_class(new_plant_path)}" do %>New Plant<% end %>
