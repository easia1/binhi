            <div class="dropdown ms-2">
                <a
                    href="#"
                    class="d-flex align-items-center text-white text-decoration-none dropdown-toggle"
                    id="dropdownUser1"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                >
                    <div class="rounded-circle me-2 sidebar-pic">
                        <% if current_user.profile_image? %>
                            <img
                            src="<%= current_user.profile_image.to_s %>"
                            alt="" 
                            />
                        <% else %>
                            <img
                                src="https://ui-avatars.com/api/?background=519259&length=1&name=<%= current_user.username %>"
                                alt=""
                            />

                        <% end %>
                    </div>
                    <strong><%= current_user.username %></strong>
                </a>
                <ul
                    class="dropdown-menu dropdown-menu-dark text-small shadow"
                    aria-labelledby="dropdownUser1"
                >
                    <li><%= link_to "Profile", user_path(current_user), class: "dropdown-item" %></li>
                    <li><%= link_to "Edit Profile", edit_user_path(current_user), class: "dropdown-item" %></li>

                    <li><hr class="dropdown-divider" /></li>
                    <li><%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>Log out<% end %></li>
                </ul>
            </div>
        <% else %>
            <%= link_to new_user_session_path, class: "navigation-link rounded mt-2 #{active_class(new_user_session_path)}" do %>Sign in<% end %>
            <%= link_to new_user_registration_path, class: "navigation-link rounded mt-2 #{active_class(new_user_registration_path)}" do %>Sign up<% end %>
