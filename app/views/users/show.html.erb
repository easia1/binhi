<div class="row">
  <div class="col-4">
    <% if @user.profile_image? %>
      <div class="ratio ratio-1x1 rounded-circle profile-pic">
        <%= image_tag @user.profile_image.to_s, class:"ratio ratio-1x1 rounded-circle profile-pic"%>
      </div>
    <% else %>
      <%= image_tag "user-img.png", class: " rounded-circle profile-image" %>
    <% end %>
  </div>
  <div class="col-8">
    <%= @user.name%><br>
    <%= @user.username%><br>
    <%= @user.email%><br>
    <%= @user.occupation%>
  </div>
</div>
<div class="row">
<h3>Database Contribution</h3>
<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Family</th>
        <th>Genus</th>
        <th>Specific epithet</th>
        <th>Hybrid</th>
        <th>Grex</th>
        <th>Infraspecies unit</th>
        <th>Infraspecies name</th>
        <th>Cultivar group</th>
        <th>Cultivar</th>
        <th>Hybrid</th>
        <th>Water reqts</th>
        <th>Landscape uses</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @user.plants.each do |plant| %>
        <tr style="transform: rotate(0);">
          <td><%= plant.family.name %></td>
          <td><i><%= get_genus(plant.genus_id).name %></i></td>
          <td><i><%= plant.specific_epithet %></i></td>
          <td><%= plant.hybrid %></td>
          <td><%= plant.grex %></td>
          <td><%= plant.infraspecies_unit %></td>
          <td><%= plant.infraspecies_name %></td>
          <td><%= plant.cultivar_group %></td>
          <td><%= plant.cultivar %></td>
          <td><%= plant.hybrid %></td>
          <td><%= plant.water_reqts %></td>
          <td><%= plant.landscape_uses %></td>
          <td><%= link_to '', plant, class: "stretched-link" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>





<br>
<br>
<br>
<%= link_to "edit profile", edit_user_path(current_user) if current_user %>

</div>